{
  "name": "Page Redder",
  "description": "Make the current page red",
  "version": "2.0",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Make this page red"
  },
  "permissions": [
        "tabs", 
        "http://*/*", 
        "https://*/*"
  ],
  "content_security_policy": "script-src 'self' https://parse.com/downloads/javascript/parse-1.3.1.min.js; object-src 'self'",
  "manifest_version": 2
}
